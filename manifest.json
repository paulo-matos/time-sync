{
  "manifest_version": 3,
  "name": "Timezone Clock",
  "version": "1.0.0",
  "description": "Beautiful offline timezone clocks with day/night detection",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Timezone Clock",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}